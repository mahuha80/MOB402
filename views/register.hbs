<div class="container d-flex flex-column">
    <form method="post" action="/user/register">
        <div class="form-group"><label for="exampleInputEmail1">Username</label><input class="form-control"
                id="exampleInputEmail1" type="" aria-describedby="emailHelp" placeholder="Enter your username"
                name="username"></div>
        <div class="form-group"><label for="exampleInputPassword1">Password</label><input class="form-control"
                id="exampleInputPassword1" type="password" placeholder="Enter your password" name="password"></div>
        <div class="form-group"><label for="exampleInputPassword1">Confirm Password</label><input class="form-control"
                id="exampleInputPassword1" type="password" placeholder="Password"></div>
        <div class="row justify-content-center">

            <button class="btn btn-primary" type="submit">
                Register
            </button>
        </div>
    </form>
    <br>
    <div class="entry">
        {{#if err}}
        <div class="alert alert-danger" role="alert">{{msg}}</div>
        {{/if}}
    </div>
</div>