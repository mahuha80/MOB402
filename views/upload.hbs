<div class="col-md-6  offset-md-3 mt-5">
    <form method="POST" action="/product/upload" enctype="multipart/form-data" >
        <div class="form-group">
            <label for="name1">Tên sản phẩm</label>
            <input type="text" name="name" class="form-control" id="name1" required="required">
        </div>
        <div class="form-group">
            <label for="price1" required="required">Đơn giá</label>
            <input type="number" name="price" class="form-control" id="price1">
        </div>
        <div class="form-group mt-3">
            <label class="mr-2">Hình ảnh</label>
            <input type="file" name="file">
        </div>
        <div class="form-group">
            <label for="description1" required="required">Miêu tả sản phẩm</label>
            <input type="text" name="description" class="form-control" id="description1">
        </div>
        <div class="form-group">
            <label for="type1">Loại sản phẩm</label>
            <input type="text" name="type" class="form-control" id="type1">
        </div>
        <div class="col text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>