<div class="col-md-6  offset-md-3 mt-5">
    {{#each items as |item index|}}
    {{#each item}}
    {{#if name}}
    <form method="POST" action="/product/edit/{{_id}}" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name1">Tên sản phẩm</label>
            <input type="text" required name="name" class="form-control" id="name1" required="required" value={{name}}>

        </div>
        <div class="form-group">
            <label for="price1" required="required">Đơn giá</label>
            <input type="number" required name="price" class="form-control" id="price1" value={{price}}>
        </div>
        <div class="form-group mt-3">
            <label class="mr-2">Hình ảnh</label>
            <input type="file" required name="image" class="form-control-file">
        </div>
        <div class="form-group">
            <label for="description1" required="required">Miêu tả sản phẩm</label>
            <input type="text" required name="description" class="form-control" id="description1" value={{description}}>
        </div>
        <div class="form-group">
            <label for="type1">Loại sản phẩm</label>
            <input type="text" required name="type" class="form-control" id="type1" value={{type}}>
        </div>
        <div class="col text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    {{/if}}
    {{/each}}
    {{/each}}
    <div class="entry">
        {{#if err}}
        <div class="alert alert-danger" role="alert">Upload product failed</div>
        {{/if}}
        {{#if success}}
        <div class="alert alert-success"" role=" alert">Upload product successfully</div>
        {{/if}}
    </div>
</div>